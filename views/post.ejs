<%- include('partials/_header') -%>

<body>

  <!-- Navigation -->
  <%- include('partials/_navigation') -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1> <%= post.title %> </h1>
            <h2 class="subheading"> <%= post.detail %> </h2>
            <span class="meta">Posted by
              <a href="#"><%= post.name %></a>
              on <%= post.dateCreated.toLocaleDateString() %> </span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <p><%= post.post %></p>
        </div>
      </div>

      <div class="col-xl-10 col-lg-0">
        <div class="tm-bg-gray tm-share-box" style="margin-top: 0px;">
          <div style="display: flex; flex-direction: row; justify-content: flex-end; gap: 20px;">
            <a href = "/posts/edit/<%= post._id %>" class="btn btn-primary p-0 tm-btn-animate tm-btn-download tm-icon-download"
              style="width: 80px; height: 80px; display: flex; justify-content: center; align-items: center; border-radius: 12px;">
              <span>Update</span>
          </a>	

            <a href="/posts/<%=post._id%>?_method=DELETE" class="btn btn-danger p-0 tm-btn-animate tm-btn-download tm-icon-download"
              style="width: 80px; height: 80px; display: flex; justify-content: center; align-items: center; border-radius: 12px;"
              onclick="return confirm('Are you sure?')">
              <span>Delete</span>
        </a>  
          </div>
        </div>
      </div>

    </div>
  </article>

  <hr>

  <!-- Footer -->
  <%- include('partials/_footer') -%>

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>